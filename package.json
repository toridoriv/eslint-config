{
  "name": "@toridoriv/eslint-config",
  "version": "0.1.0",
  "type": "module",
  "description": "A custom Eslint configuration for my personal projects.",
  "main": "index.js",
  "files": ["bin", "lib", "index.js"],
  "author": {
    "name": "Victoria Rodriguez",
    "email": "vrodriguezfe@icloud.com",
    "url": "https://github.com/toridoriv"
  },
  "directories": {
    "bin": "./bin"
  },
  "license": "GPLv3",
  "homepage": "https://github.com/toridoriv/eslint-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toridoriv/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/toridoriv/eslint-config/issues",
    "email": "vrodriguezfe@icloud.com"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "eslint": "^8.56.0"
  },
  "scripts": {
    "preinstall": "npm install --save-dev eslint",
    "postinstall": "bin/setup-eslint-config.js"
  },
  "dependencies": {
    "@homer0/prettier-plugin-jsdoc": "^8.0.0",
    "@types/eslint": "^8.56.2",
    "@types/eslint__eslintrc": "^2.1.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.0.6",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^13.24.0",
    "jsonc-eslint-parser": "^2.4.0",
    "jsonc-simple-parser": "^3.0.0",
    "markdown-eslint-parser": "^1.2.1",
    "prettier": "3.2.5",
    "typescript": "^5.3.3"
  },
  "config": {
    "@toridoriv": {
      "files": {
        "ignore": {
          "generated": {
            "title": "Automatically generated",
            "paths": ["DS_Store", "node_modules", "package-lock.json", "coverage"]
          },
          "exceptions": {
            "title": "Do not ignore",
            "paths": ["!bin/**", "!.vscode/**"]
          },
          "logs": {
            "title": "Logs",
            "paths": ["logs", "*.log", "npm-debug.log*"]
          },
          "temporal": {
            "title": "Temporary",
            "paths": ["tmp", ".tmp", "tmp.*", "var/tmp"]
          }
        }
      }
    }
  }
}
